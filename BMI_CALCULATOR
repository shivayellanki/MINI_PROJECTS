<title>BMI Calculator</title>
<style>
  body{font-family:system-ui,Segoe UI,Roboto,Arial;margin:30px;background:#f8fbff;color:#072740}
  .wrap{max-width:520px;margin:auto;background:#fff;padding:18px;border-radius:12px;box-shadow:0 8px 22px rgba(0,0,0,0.06)}
  label{display:block;margin-top:8px}
  input{padding:10px;border-radius:8px;border:1px solid #ddd;width:100%}
  button{margin-top:12px;padding:10px;border-radius:8px;border:0;cursor:pointer}
  .res{margin-top:12px;font-weight:700}
  a{display:block;margin-top:12px}
</style></head><body>
<div class="wrap">
  <h2>BMI Calculator</h2>
  <label>Weight (kg)<input id="w" type="number" step="0.1" value="60"></label>
  <label>Height (cm)<input id="h" type="number" step="0.1" value="170"></label>
  <button id="calc">Calculate BMI</button>
  <div class="res" id="res"></div>
  <a href="index.html">← Back to index</a>
</div>
<script>
document.getElementById('calc').addEventListener('click', ()=>{
  const w = parseFloat(document.getElementById('w').value)
  const h = parseFloat(document.getElementById('h').value)
  if(!w || !h){ document.getElementById('res').textContent = 'Enter valid values'; return }
  const m = h/100
  const bmi = +(w / (m*m)).toFixed(2)
  let cat = ''
  if(bmi < 18.5) cat = 'Underweight'
  else if(bmi < 25) cat = 'Normal'
  else if(bmi < 30) cat = 'Overweight'
  else cat = 'Obese'
  document.getElementById('res').textContent = 'BMI: ' + bmi + ' — ' + cat
})
</script>
</body></html>
