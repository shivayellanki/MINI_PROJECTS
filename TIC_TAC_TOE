<title>Tic-Tac-Toe</title>
<style>
  body{font-family:system-ui,Segoe UI,Roboto,Arial;margin:30px;background:#fff8f0}
  .wrap{max-width:420px;margin:auto;text-align:center}
  .board{display:grid;grid-template-columns:repeat(3,1fr);gap:8px;margin-top:12px}
  .cell{background:#fff;padding:30px;font-size:28px;border-radius:8px;cursor:pointer;box-shadow:0 6px 12px rgba(0,0,0,0.04)}
  .info{margin-top:12px}
  button{margin-top:8px;padding:8px 12px;border-radius:8px;border:0;cursor:pointer}
  a{display:block;margin-top:12px}
</style></head><body>
<div class="wrap">
  <h2>Tic‑Tac‑Toe</h2>
  <div id="turn">Turn: X</div>
  <div class="board" id="board"></div>
  <div class="info" id="info"></div>
  <button id="reset">Restart</button>
  <a href="index.html">← Back to index</a>
</div>
<script>
(() => {
  const boardEl = document.getElementById('board'), turnEl = document.getElementById('turn'), info = document.getElementById('info')
  const WIN = [[0,1,2],[3,4,5],[6,7,8],[0,3,6],[1,4,7],[2,5,8],[0,4,8],[2,4,6]]
  let cells = Array(9).fill(null), turn = 'X', over = false

  function render(){
    boardEl.innerHTML = ''
    cells.forEach((v,i)=>{
      const d = document.createElement('div'); d.className='cell'; d.textContent = v || ''
      d.addEventListener('click', ()=>{ if(over || cells[i]) return; cells[i]=turn; check(); turn = turn==='X'?'O':'X'; turnEl.textContent='Turn: '+turn; render() })
      boardEl.appendChild(d)
    })
  }
  function check(){
    for(const line of WIN){
      const [a,b,c] = line
      if(cells[a] && cells[a]===cells[b] && cells[b]===cells[c]){ over=true; info.textContent = 'Winner: '+cells[a]; return }
    }
    if(cells.every(Boolean)){ over=true; info.textContent='Draw' }
  }
  document.getElementById('reset').addEventListener('click', ()=>{ cells=Array(9).fill(null); turn='X'; over=false; info.textContent=''; turnEl.textContent='Turn: X'; render() })

  render()
})()
</script>
</body></html>
